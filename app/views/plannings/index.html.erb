<p id="notice"><%= notice %></p>

<h1>Plannings</h1>

<table>
  <thead>
    <tr>
      <th>Titre</th>
      <th>Etat</th>
      <th>Date debut</th>
      <th>Echeance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plannings.each do |planning| %>
      <tr>
        <td><%= planning.titre %></td>
        <td><%= planning.etat %></td>
        <td><%= planning.date_debut %></td>
        <td><%= planning.echeance %></td>
        <td><%= link_to 'Show', planning %></td>
        <td><%= link_to 'Edit', edit_planning_path(planning) %></td>
        <td><%= link_to 'Destroy', planning, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

