<p id="notice"><%= notice %></p>

<h1>Assurances</h1>

<table>
  <thead>
    <tr>
      <th>Assurance</th>
      <th>Montant</th>
      <th>Caution</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assurances.each do |assurance| %>
      <tr>
        <td><%= assurance.assurance %></td>
        <td><%= assurance.montant %></td>
        <td><%= assurance.caution %></td>
        <td><%= link_to 'Show', assurance %></td>
        <td><%= link_to 'Edit', edit_assurance_path(assurance) %></td>
        <td><%= link_to 'Destroy', assurance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

