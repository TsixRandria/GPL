



<div class="demandeavis">
<script type="text/javascript">
$(document).ready(function(){
$('#forgotmdp').click(function(){
$.fancybox({
'scrolling'		: 'no',
'titleShow'		: false,
'href' : '#formmdp'
});
return false;
});
$('#formmdp').submit(function(){
var params = jQuery("#formmdp").serialize();
$('#inputforgotmdp').hide();
$('#ajax-loader-compte').show();
$("#infos_formmdp").load("/?fond=_ajaxinclude&inc=tunnel_connexion&" + params, function(){
$('#ajax-loader-compte').hide();
});
return false;
});
});
</script>
<div class="largeurb pbottom10">
<h1>Connexion au compte GP Location</h1>
<div class="grid_465">  
      <div class="fblanc">
          <form  id="connexion">
            <h3 class="form-connec-h3">J'ai déjà un compte</h3>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              
           <button type="button" class="forgotmdp" id="forgotmdp">Mot de passe oublié ?</button>
          
                  <fieldset>
                  <label  for="email"><span class="label">Mon e-mail </span>
                    <%= f.text_field :email, autofocus: true, autocomplete: "email"%>
                    </label>
                  </fieldset>

                  <fieldset>
                  <label for="motdepasse"><span class="label">Mon mot de passe </span>
                      <%= f.password_field :password, autocomplete: "current-password"%>
                      <%= f.submit "valider" , class:'lien lienconnec' %> 
                  </label>
                  </fieldset>
          </form>
       </div>

 <div id="tourfmdp" class="tourform mtop20 none">
<form action="https://www.gplocation.fr/?fond=moncompte" method="post" name="formmdp" id="formmdp">
<h3 class="form-forgot-h3">Mot de passe oublié ?</h3>
<span id="infos_formmdp"></span>
<div id="ajax-loader-compte" class="none"></div>
<div id="inputforgotmdp">
<p>Inscrivez votre email pour recevoir votre nouveau mot de passe.</p>
<fieldset>
<input type="hidden" name="action" value="chmdpajax" />
<label for="email"><span class="label">Mon e-mail </span>
<input name="email" type="text"/>
</label> <button type="submit" class="lien lienconnec">Valider</button>
</fieldset>
</div>
</form>
</div> 
        
      <% end %>