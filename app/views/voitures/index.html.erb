<p id="notice"><%= notice %></p>

<h1>Voitures</h1>

<table>
  <thead>
    <tr>
      <th>Marque</th>
      <th>Place</th>
      <th>Vitesse</th>
      <th>Type</th>
      <th>Climatiseur</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @voitures.each do |voiture| %>
      <tr>
        <td><%= voiture.marque %></td>
        <td><%= voiture.place %></td>
        <td><%= voiture.vitesse %></td>
        <td><%= voiture.type %></td>
        <td><%= voiture.climatiseur %></td>
        <td><%= voiture.status %></td>
        <td><%= link_to 'Show', voiture %></td>
        <td><%= link_to 'Edit', edit_voiture_path(voiture) %></td>
        <td><%= link_to 'Destroy', voiture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

